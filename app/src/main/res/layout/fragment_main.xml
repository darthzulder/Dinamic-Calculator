<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".fragments.MainFragment">

    <!-- Top Display Area (remains the same) -->
    <View
        android:id="@+id/background_expression"
        android:background="@drawable/background_expression"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline_display_bottom"/>

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        style="@style/Toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:menu="@menu/options_menu"/>

    <TextView
        android:id="@+id/resultText"
        style="@style/Expression.Result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@id/background_expression"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline_display_top" />

    <com.forz.calculator.expression.ExpressionEditText
        android:id="@+id/expressionEditText"
        style="@style/Expression"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintBottom_toTopOf="@id/resultText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/toolbar"
        app:layout_constraintTop_toTopOf="@id/toolbar" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_display_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.06"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_display_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.10" />

    <!-- NEW: Interactive Canvas -->
    <FrameLayout
        android:id="@+id/canvas_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/guideline_display_bottom"
        app:layout_constraintBottom_toTopOf="@id/keyboard_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- NEW: Keyboard Container -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/keyboard_container"
        android:name="com.forz.calculator.fragments.CalculatorFragment"
        android:layout_width="0dp"
        android:layout_height="@dimen/_150sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout="@layout/fragment_calculator" />

    <!-- Trash Icon Overlay - Visible during drag -->
    <ImageView
        android:id="@+id/trash_icon_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_delete"
        android:scaleType="centerInside"
        android:background="#80000000"
        android:visibility="gone"
        android:contentDescription="@string/history_data_menu_delete"
        app:layout_constraintTop_toTopOf="@id/keyboard_container"
        app:layout_constraintBottom_toBottomOf="@id/keyboard_container"
        app:layout_constraintStart_toStartOf="@id/keyboard_container"
        app:layout_constraintEnd_toEndOf="@id/keyboard_container" />

</androidx.constraintlayout.widget.ConstraintLayout>

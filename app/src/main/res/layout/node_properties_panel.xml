<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorSurface"
    android:padding="16dp"
    android:minHeight="100dp">

    <TextView
        android:id="@+id/name_label"
        style="@style/optionTitleText"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        android:text="@string/node_name_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/node_name_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/node_name_set"
        android:inputType="text"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurface"
        android:textColorHint="@android:color/darker_gray"
        android:backgroundTint="?attr/colorPrimary"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@id/name_label"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottomExtraButtonsGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/description_label"
        style="@style/optionTitleText"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        android:text="@string/node_description_label"
        app:layout_constraintTop_toBottomOf="@id/bottomExtraButtonsGuideline"
        app:layout_constraintStart_toStartOf="@id/bottomExtraButtonsGuideline" />

    <EditText
        android:id="@+id/node_description_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/node_description_set"
        android:inputType="textMultiLine"
        android:lines="2"
        android:maxLines="3"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurface"
        android:textColorHint="@android:color/darker_gray"
        android:backgroundTint="?attr/colorPrimary"
        android:layout_marginBottom="16dp"
        android:padding="8dp"
        app:layout_constraintStart_toEndOf="@id/description_label"
        app:layout_constraintTop_toBottomOf="@id/bottomExtraButtonsGuideline"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

